<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#01002A"
    android:weightSum="7">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="GEOMATRIC"
        android:layout_weight="1"
        android:textColor="#fff"
        android:padding="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:weightSum="2" >

        <Button
            android:id="@+id/buttonRes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#FC0107"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:text="calculate distance between two points( = )"
            android:textColor="#fff"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4" >

	        <EditText
	            android:id="@+id/editTextX1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:ems="10"
	            android:background="#fff"
	            android:textColor="#000"
	            android:padding="5dp"
	            android:layout_margin="2dp"
	            android:textSize="18sp"
	            android:hint="x1="
	            android:layout_gravity="center"
	            android:inputType="numberDecimal" >
	
	        </EditText>
	
	        <EditText
	            android:id="@+id/editTextY1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:ems="10"
	            android:background="#fff"
	            android:textColor="#000"
	            android:padding="5dp"
	            android:layout_margin="2dp"
	            android:textSize="18sp"
	            android:hint="y1="
	            android:layout_gravity="center"
	            android:inputType="numberDecimal" />
			<EditText
	            android:id="@+id/editTextX2"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:ems="10"
	            android:padding="5dp"
	            android:layout_margin="2dp"
	            android:background="#fff"
	            android:textColor="#000"
	            android:textSize="18sp"
	            android:hint="x2="
	            android:layout_gravity="center"
	            android:inputType="numberDecimal" >
	
	        </EditText>
	
	        <EditText
	            android:id="@+id/editTextY2"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:ems="10"
	            android:hint="y2="
	            android:background="#fff"
	            android:textColor="#000"
	            android:padding="5dp"
	            android:layout_margin="2dp"
	            android:textSize="18sp"
	            android:layout_gravity="center"
	            android:inputType="numberDecimal" />
	        
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"
        android:weightSum="2" >

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="112dp"
            android:layout_height="match_parent" >

            <RadioButton
                android:id="@+id/radioArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="area"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="volume"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RadioGroup>

       <Spinner
           android:id="@+id/spinnerGeo"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginBottom="5dp"
           android:layout_marginTop="5dp"
           android:background="#fff"
           android:layout_weight="1"
           android:textColor="#000"
           android:textSize="20sp"
           android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Result : "
        android:textColor="#fff"
        android:layout_weight="1"
        android:textSize="24sp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold" />
    
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3" 
        android:weightSum="5"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
		
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >
       
       <TextView 
           android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
	        android:textSize="20sp"
	        android:textColor="#fff"
	        android:text="Radius = "
	        android:textStyle="bold"/>
       <EditText
            android:id="@+id/editTextRadius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
	        android:textSize="18sp"
	        android:textColor="#000"
	        android:background="#fff"
	        android:hint="radius"
	        android:textStyle="bold"
            android:inputType="numberDecimal" />
    </LinearLayout> 
       
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >
       
       <TextView 
           android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
	        android:textSize="20sp"
	        android:textColor="#fff"
	        android:layout_margin="3dp"
	        android:text="Length = "
	        android:textStyle="bold"/>
       <EditText
            android:id="@+id/editTextLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:layout_margin="3dp"
            android:gravity="center"
	        android:textSize="18sp"
	        android:textColor="#000"
	        android:background="#fff"
	        android:hint="length"
	        android:textStyle="bold"
            android:inputType="numberDecimal" />
    </LinearLayout> 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >
       
       <TextView 
           android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
	        android:textSize="20sp"
	        android:textColor="#fff"
	        android:layout_margin="3dp"
	        android:text="Width = "
	        android:textStyle="bold"/>
       <EditText
            android:id="@+id/editTextWidth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:layout_margin="3dp"
	        android:textSize="18sp"
	        android:textColor="#000"
	        android:textStyle="bold"
	        android:background="#fff"
	        android:hint="width"
            android:inputType="numberDecimal" />
    </LinearLayout> 
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >
       
       <TextView 
           android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
	        android:textSize="20sp"
	        android:layout_margin="3dp"
	        android:textColor="#fff"
	        android:text="Height = "
	        android:textStyle="bold"/>
       <EditText
            android:id="@+id/editTextHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
	        android:textSize="18sp"
	        android:layout_margin="3dp"
	        android:textColor="#000"
	        android:background="#fff"
	        android:textStyle="bold"
	        android:hint="height"
            android:inputType="numberDecimal" />
    </LinearLayout> 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >
       
       <TextView 
           android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:layout_margin="3dp"
	        android:textSize="20sp"
	        android:textColor="#fff"
	        android:text="Angle = "
	        android:textStyle="bold"/>
       <EditText
            android:id="@+id/editTextAngle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
	        android:textSize="18sp"
	        android:background="#fff"
	        android:textColor="#000"
	        android:layout_margin="3dp"
	        android:textStyle="bold"
	        android:hint="angle"
            android:inputType="numberDecimal" />
    </LinearLayout>  

    </LinearLayout>

</LinearLayout>
