            <Button
                android:id="@+id/buttonFactN"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#06002F"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="othersClick"
                android:text="n!" />

            <Button
                android:id="@+id/buttonNcr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:background="#06002F"
                android:onClick="twoOperatorNeed"
                android:textColor="#fff"
                android:layout_margin="3dp"
                android:text="nCr" />

            <Button
                android:id="@+id/buttonNpr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#06002F"
                android:onClick="twoOperatorNeed"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="nPr" />

            <Button
                android:id="@+id/buttonXsqr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#06002F"
                android:textColor="#fff"
                android:layout_margin="3dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:onClick="othersClick"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="x^2" />

            <Button
                android:id="@+id/buttonXcube"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#06002F"
                android:textColor="#fff"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:textStyle="bold"
                android:onClick="othersClick"
                android:layout_weight="1"
                android:text="x^3" />

            <Button
                android:id="@+id/buttonXToThePowY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#06002F"
                android:textColor="#fff"
                android:layout_margin="3dp"
                android:textSize="22sp"
                android:onClick="twoOperatorNeed"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="x^y" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:weightSum="6"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonLog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="othersClick"
                android:background="#06002F"
                android:textColor="#fff"
                android:layout_margin="3dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:text="log" />

            <Button
                android:id="@+id/buttonLog10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="#06002F"
                android:onClick="othersClick"
                android:text="log10"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonSinh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#06002F"
                android:textColor="#fff"
                android:layout_margin="3dp"
                android:onClick="othersClick"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="22sp"
                android:textStyle="bold"
                android:text="sinh" />

            <Button
                android:id="@+id/buttonCosh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#06002F"
                android:onClick="othersClick"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="cosh" />

            <Button
                android:id="@+id/buttonTanh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#06002F"
                android:textColor="#fff"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="22sp"
                android:textStyle="bold"
                android:onClick="othersClick"
                android:text="tanh" />

            <Button
                android:id="@+id/buttonSec"
                android:layout_width="match_parent"
                android:background="#06002F"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_margin="3dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:onClick="othersClick"
                android:layout_weight="1"
                android:text="sec" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:weightSum="6"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonEtoThePowX"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#06002F"
                android:textColor="#fff"
                android:layout_margin="3dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:onClick="othersClick"
                android:text="e^x" />

            <Button
                android:id="@+id/buttonCot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#06002F"
                android:textColor="#fff"
                android:onClick="othersClick"
                android:layout_margin="3dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="cot" />

            <Button
                android:id="@+id/buttonXqrt"
                android:layout_width="match_parent"
                android:background="#06002F"
                android:textColor="#fff"
                android:layout_margin="3dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:onClick="twoOperatorNeed"
                android:layout_height="match_parent"
