                android:background="#06002F"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_margin="3dp"
                android:onClick="othersClick"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="abs" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:weightSum="4"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonOnePlusXInverseminusOne"
                android:layout_width="match_parent"
                android:background="#06002F"
                android:textColor="#fff"
                android:layout_margin="3dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:onClick="othersClick"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="(1+x)^-1" />

            <Button
                android:id="@+id/buttonOneMinusXInverseminusOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#06002F"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:onClick="othersClick"
                android:layout_margin="3dp"
                android:text="(1-x)^-1" />

            <Button
                android:id="@+id/buttonEtoThePowXMinusOne"
                android:layout_width="match_parent"
                android:background="#06002F"
                android:textColor="#fff"
                android:layout_margin="3dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="22sp"
                android:textStyle="bold"
                android:text="e^x-1" />

            <Button
                android:id="@+id/buttonCosec"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#06002F"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:onClick="othersClick"
